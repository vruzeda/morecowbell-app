<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/activity_main_list_entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/activity_main_list_entry_thumbnail"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/video_placeholder"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/activity_main_list_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/activity_main_list_entry_thumbnail"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/dev_activity_main_list_item_title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
